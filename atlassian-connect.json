{
    "key": "slide",
    "name": "Slide",
    "description": "Enter any rich text in the body of this macro so it will be rendered as a new slide.",
    "vendor": {
        "name": "Sanofi IADC",
        "url": "https://github.com/Sanofi-IADC"
    },
    "baseUrl": "{{localBaseUrl}}",
    "authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        "installed": "/installed"
    },
    "scopes": [
        "READ"
    ],
    "apiMigrations": {
        "signed-install": true
    },
    "modules": {
        "staticContentMacros": [
            {
                "url": "/slide?macroId={macro.id}&pageId={page.id}&pageVersion={page.version}&slideId={slide_id}",
                "description": {
                    "value": "Enter any rich text in the body of this macro so it will be rendered as a new slide."
                },
                "bodyType": "rich-text",
                "name": {
                    "value": "Slide"
                },
                "key": "slide",
                "parameters": [
                    {
                        "identifier": "slide_id",
                        "name": {
                            "value": "Slide ID"
                        },
                        "description": {
                            "value": "Specify an ID if you have multiple slides."
                        },
                        "type": "string",
                        "required": false,
                        "multiple": false,
                        "defaultValue": "",
                        "hidden": false
                    },
                    {
                        "identifier": "slide_theme",
                        "name": {
                            "value": "Slide Theme"
                        },
                        "description": {
                            "value": "Specify the template to be used to render the slide."
                        },
                        "type": "enum",
                        "required": true,
                        "multiple": false,
                        "defaultValue": "digital",
                        "values": [
                            "digital",
                            "iadc",
                            "konviw"
                        ],
                        "hidden": false
                    },
                    {
                        "identifier": "slide_type",
                        "name": {
                            "value": "Slide Type"
                        },
                        "description": {
                            "value": "Specify the slide type to use from the values available in your style: cover, default, bubble, ..."
                        },
                        "type": "string",
                        "required": false,
                        "multiple": false,
                        "defaultValue": "",
                        "hidden": false
                    },
                    {
                        "identifier": "slide_transition",
                        "name": {
                            "value": "Slide Transition"
                        },
                        "description": {
                            "value": "Specify the slide transition to use in the move from this slide to the next one: slide (default), zoom, convex, fade, ..."
                        },
                        "type": "string",
                        "required": false,
                        "multiple": false,
                        "defaultValue": "",
                        "hidden": false
                    },
                    {
                        "identifier": "slide_attachment",
                        "name": {
                            "value": "Slide Attachment"
                        },
                        "description": {
                            "value": "Specify an attachment that will be used as background image or video for the slide."
                        },
                        "type": "attachment",
                        "required": false,
                        "multiple": false,
                        "defaultValue": "",
                        "hidden": false
                    }
                ]
            }
        ]
    }
}